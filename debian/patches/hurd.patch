-#ifdef __MACH__
+#if (defined __MACH__ && defined __APPLE__)
 #include <mach/mach.h>
 #include <mach/mach_time.h>
 #endif
@@ -192,7 +192,7 @@
     struct timespec tp;
     clock_gettime(CLOCK_MONOTONIC, &tp);
     return (int64)tp.tv_sec*1000000000 + tp.tv_nsec;
